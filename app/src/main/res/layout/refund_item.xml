<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp">
            <TextView
                android:id="@+id/tv_order_dm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textColor="@color/black" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/ic_normal_dot_left" />
            <TextView
                android:id="@+id/tv_order_ddmj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/line_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.sunfusheng.glideimageview.GlideImageView
                android:id="@+id/glide_icon"
                android:layout_width="77dp"
                android:layout_height="92dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher"
                />
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/shopping_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#080808"
                    android:singleLine="false"
                    android:maxEms="10"
                    android:text="我我懂得"/>
                <TextView
                    android:layout_below="@+id/shopping_name"
                    android:layout_marginTop="19dp"
                    android:id="@+id/specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="红色"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="28dp"
                    android:layout_below="@+id/specification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shopping_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:text="4444"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="38dp"
                        android:id="@+id/shopping_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#080808"
                        android:text="X1"/>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <TextView
                android:layout_toLeftOf="@+id/tv_order_hj"
                android:id="@+id/tv_count_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共计12件商品"
                android:textColor="@color/black" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="12dp">

            <TextView
                android:id="@+id/go_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/def_red_tint"
                android:gravity="center"
                android:text="查看详情"
                android:padding="3dp"
                android:textColor="@color/red"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>