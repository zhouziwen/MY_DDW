<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<com.sunfusheng.glideimageview.GlideImageView
    android:id="@+id/glide_icon"
    android:layout_width="77dp"
    android:layout_height="92dp"
    android:layout_margin="10dp"
    android:src="@mipmap/ic_launcher"
    />
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shopping_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#080808"
            android:singleLine="false"
            android:maxEms="10"
            android:text="我我懂得"/>
        <TextView
            android:layout_below="@+id/shopping_name"
            android:layout_marginTop="9dp"
            android:id="@+id/specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="红色"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/refund"
            android:layout_below="@+id/shopping_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:background="@drawable/def_white_black"/>
        <RelativeLayout
            android:layout_marginTop="28dp"
            android:layout_below="@+id/specification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shopping_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="4444"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="38dp"
                android:id="@+id/shopping_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#080808"
                android:text="X1"/>
        </RelativeLayout>

    </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>