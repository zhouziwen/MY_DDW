<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bbacr.ddw.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
   <com.example.bbacr.ddw.widget.AppTitleBar
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:back_img="@mipmap/fragment_back_arrow"
       app:bar_title="登录">
   </com.example.bbacr.ddw.widget.AppTitleBar>
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="请输入您的手机号:"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textColorHint="@color/gray"
        android:background="@null"/>
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_1dp"
            android:background="@color/divider"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="请输入您的密码    :"/>
            <EditText
                android:id="@+id/pwd"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:hint="请输入6-20位密码"
                android:textColorHint="@color/gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_1dp"
            android:layout_marginLeft="5dp"
            android:background="@color/divider"/>
        <Button
            android:id="@+id/login"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/def_red"
            android:textColor="@color/white"
            android:text="登录"/>
        <Button
            android:id="@+id/register"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/def_red_tint"
            android:text="注册"
            android:textColor="@color/red"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="忘记密码?"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/layout">
        <TextView
            android:layout_toLeftOf="@+id/txt"
            android:layout_centerVertical="true"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="一键登录"
           />
        <TextView
            android:layout_toRightOf="@+id/txt"
            android:layout_centerVertical="true"
            android:background="@color/divider"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/qq"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qq"/>
        <ImageView
            android:id="@+id/wechat"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixing"/>
    </LinearLayout>
</RelativeLayout>
