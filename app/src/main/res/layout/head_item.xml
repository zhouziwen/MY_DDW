<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_main_banner"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@color/white"
        android:paddingTop="12dp">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_main_banner"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_main_banner"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lRecyclerView_bom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_home_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_home_bottom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:text="为/你/优/选"
            android:gravity="center"
            android:textColor="@color/red"
            android:background="@mipmap/wnyx"
            android:textSize="14sp"/>
    </RelativeLayout>

</LinearLayout>