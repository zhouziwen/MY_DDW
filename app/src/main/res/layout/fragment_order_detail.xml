<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:id="@+id/relative"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context="com.example.bbacr.ddw.mine.myorder.OrderDetailFragment">
    <com.example.bbacr.ddw.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@mipmap/fragment_back_arrow"
        app:bar_title="订单详情">
    </com.example.bbacr.ddw.widget.AppTitleBar>
    <ScrollView
        android:layout_below="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/red">
            <TextView
                android:id="@+id/state"
                android:text="支付"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/time_difference"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="ssssss"
                />
        </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/award_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:text="订单号:"/>

        <TextView
            android:id="@+id/get_award"
            android:layout_toRightOf="@+id/award_num"
            android:layout_toLeftOf="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="12334455555"
            android:padding="5dp"
            android:layout_marginRight="@dimen/dp_10"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/copy"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/def_white_black"
            android:padding="5dp"
            android:text="复制"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chose_address"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/weizhi"
            />
        <LinearLayout
            android:layout_toLeftOf="@+id/ic_normal_dot_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/location"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="我的"/>
                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="我的"/>
            </LinearLayout>

            <TextView
                android:id="@+id/user_address"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#222222"
                android:text="点击选择或添加地址"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/ic_normal_dot_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_normal_dot_left"/>
    </RelativeLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_marginTop="10dp"
    android:id="@+id/list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@color/white"
    >
    </com.github.jdsjlzx.recyclerview.LRecyclerView>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:orientation="vertical">
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="支付方式:"/>
    <TextView
        android:id="@+id/pay_way"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网上支付"/>
</LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="配送方式:"/>
            <TextView
                android:id="@+id/express"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通快递"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="订单编号:"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/pay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="123445"
                android:textSize="13sp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/copy2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:background="@drawable/def_white_black"
                android:padding="1dp"
                android:text="复制"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="下单时间:"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/pay_time"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="123445"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
       android:id="@+id/layout"
       android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <TextView
            android:visibility="gone"
            android:id="@+id/order_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/def_red_tint"
            android:gravity="center"
            android:text="查看物流"
            android:padding="3dp"
            android:textColor="@color/red"
            android:textSize="15sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/def_gray"
            android:gravity="center"
            android:text="取消订单"
            android:padding="3dp"
            android:textSize="15sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/order_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/def_red_tint"
            android:gravity="center"
            android:text="立即评价"
            android:padding="3dp"
            android:textColor="@color/red"
            android:textSize="15sp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/order_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/def_red_tint"
            android:gravity="center"
            android:text="确认收货"
            android:padding="3dp"
            android:textColor="@color/red"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>
