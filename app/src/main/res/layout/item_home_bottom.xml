<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/item_all"
    android:paddingBottom="20dp"
    android:orientation="vertical">
    <com.sunfusheng.glideimageview.GlideImageView
        android:id="@+id/iv_home_bottom_icon"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_home_bottom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="商品名称"
        android:singleLine="true"
        android:maxEms="10"
        android:textColor="@color/line_color"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/goods_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分期购"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/def_red"/>
    <TextView
        android:id="@+id/tv_home_bottom_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="￥29.80"
        android:layout_marginLeft="5dp"
        android:textColor="@color/red"
        android:textSize="16sp" />
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33评价"/>
    <TextView
        android:id="@+id/consult"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22咨询"/>
</RelativeLayout>
</LinearLayout>