<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <com.example.bbacr.ddw.widget.AppTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@mipmap/fragment_back_arrow"
        app:bar_title="添加银行卡">
    </com.example.bbacr.ddw.widget.AppTitleBar>
    <RelativeLayout
        android:id="@+id/Relative"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="发卡银行"/>
        <TextView
            android:id="@+id/text_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/pic"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/sljz"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/person_card"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="持卡人"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/person_card"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="银行卡姓名"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/content"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="开户支行"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/content"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="开户支行"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/card_num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="银行卡号"
            />

        <EditText
            android:id="@+id/text_card_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_num"
            android:background="@null"
            android:inputType="number"
            android:hint="银行卡号"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/card_num_sure"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="再次输入卡号"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/text_card_num_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/card_num_sure"
            android:layout_centerVertical="true"
            android:textColorHint="@color/lightgray"
            android:textSize="16sp"
            android:hint="再次输入卡号"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/registerInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/def_red"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>
