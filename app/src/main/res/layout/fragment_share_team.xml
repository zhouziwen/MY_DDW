<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
              android:orientation="vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.example.bbacr.ddw.mine.shareteam.ShareTeamFragment">
    <com.lixs.charts.PieChartView
    android:id="@+id/pieView"
    android:layout_width="300dp"
    android:layout_height="300dp"
    app:backColor="#ffd9d9d9"
    app:circleStrokeWidth='2dp'
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:background="@color/green"
                android:layout_width="20dp"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/one"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wodde"/>
            <TextView
                android:id="@+id/look_1"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:background="@color/holo_orange_light"
                android:layout_width="20dp"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/two"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wodde"/>
            <TextView
                android:id="@+id/look_2"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:background="@color/red"
                android:layout_width="20dp"
                android:layout_height="10dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wodde"/>
            <TextView
                android:id="@+id/look_3"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
