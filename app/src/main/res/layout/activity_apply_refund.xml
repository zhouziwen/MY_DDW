<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="com.example.bbacr.ddw.mine.myorder.ApplyRefundFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.example.bbacr.ddw.widget.AppTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_img="@mipmap/fragment_back_arrow"
            app:bar_title="售后申请">
        </com.example.bbacr.ddw.widget.AppTitleBar>
        <LinearLayout
            android:layout_below="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.sunfusheng.glideimageview.GlideImageView
                android:id="@+id/glide_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@mipmap/ic_launcher"/>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/shopping_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是商品"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/goods_price"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/shopping_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/goods_num"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopping_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:padding="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_toLeftOf="@+id/ic_normal_dot_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/location"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:text="服务类型："/>
            </LinearLayout>
            <TextView
                android:id="@+id/ic_normal_dot_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_normal_dot_left"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:padding="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_toLeftOf="@+id/ic_normal_dot_left2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/location"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:text="退款原因："/>
            </LinearLayout>
            <TextView
                android:id="@+id/ic_normal_dot_left2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_normal_dot_left"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:padding="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/location"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:text="退款金额："/>
                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:padding="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/location"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:text="退款说明："/>
                <EditText
                    android:id="@+id/explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:hint="选填"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:padding="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/location"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#222222"
                    android:text="上传凭证"/>
            </LinearLayout>
        </LinearLayout>
        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/pic"
            android:src="@mipmap/load_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="提交"/>
    </LinearLayout>

</ScrollView>
