<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.example.bbacr.ddw.mine.set.AboutUsFragment">
    <com.example.bbacr.ddw.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:back_img="@mipmap/fragment_back_arrow"
        app:bar_title="关于我们">
    </com.example.bbacr.ddw.widget.AppTitleBar>
    <ImageView
        android:id="@+id/pic"
        android:layout_below="@+id/app_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:src="@mipmap/ddw"/>
    <TextView
        android:id="@+id/text_1"
        android:layout_below="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/font_grey"
        android:layout_marginTop="14dp"
        android:text="叮当一响  购物到家"/>
    <TextView
        android:id="@+id/Version"
        android:layout_below="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp"
        android:text=""/>
    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:textColor="@color/gray"
        android:text="河南叮当猫电子商务有限公司"/>
    <TextView
        android:id="@+id/text_3"
        android:layout_above="@+id/text_2"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Copyright@2017-2020"/>
    <TextView
        android:layout_above="@+id/text_3"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray"
        android:text="版权信息"/>
</RelativeLayout>
