<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="商品唯一识别码"
            android:padding="8dp"
           android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="商品名称"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="订单编号"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="保修时间"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="数量"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_11"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="服务名称"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_12"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_13"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="店铺名称"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_14"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_15"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="唯一ID"
            android:padding="8dp"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/txt_17"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="状态"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_18"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:background="@drawable/def_white_black2"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>