<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="购买数量"
            android:textColor="@color/line_color"/>

        <LinearLayout
            android:id="@+id/ll_item_number_comm_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_minus_comm_detail"
                style="@style/car_add_comm_style"
                android:text="—"/>

            <TextView
                android:id="@+id/tv_item_number_comm_detail"
                style="@style/car_add_comm_style"
                android:text="1"
                android:textColor="@color/line_color"/>
            <TextView
                android:id="@+id/tv_item_add_comm_detail"
                style="@style/car_add_comm_style"
                android:text="+"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:text="叮当网服务"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
        <com.example.bbacr.ddw.widget.MyListView
            android:id="@+id/lRecyclerView_bom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.example.bbacr.ddw.widget.MyListView>
</LinearLayout>