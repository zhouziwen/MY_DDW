<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/necessary"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/line_color"
            android:text="必备功能"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="更多"
            android:textSize="12sp"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_normal_dot_left"
            />
    </RelativeLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tgm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推广码"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:textColor="@color/search_tab_nomarl"
                android:gravity="center"
                android:drawableTop="@mipmap/tgm2"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/pot_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_toRightOf="@+id/tgm"
                android:background="@mipmap/pot"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/yhq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/yhq"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/search_tab_nomarl"
            android:text="领券中心"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/pot_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_toRightOf="@+id/yhq"
                android:background="@mipmap/pot"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享经济"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/search_tab_nomarl"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/share"/>
            <TextView
                android:visibility="gone"
               android:gravity="center"
               android:textColor="@color/red"
                android:id="@+id/pot_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_toRightOf="@+id/share"
                android:background="@mipmap/pot"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>