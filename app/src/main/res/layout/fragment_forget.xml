<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bbacr.ddw.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.bbacr.ddw.widget.AppTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_img="@mipmap/fragment_back_arrow"
            app:bar_title="注册">
        </com.example.bbacr.ddw.widget.AppTitleBar>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="请输入您的手机号:"/>
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColorHint="@color/gray"
                android:background="@null"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="请输入验证码:"/>
            <EditText
                android:id="@+id/code"
                android:layout_toRightOf="@+id/txt"
                android:layout_toLeftOf="@+id/get_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:textColorHint="@color/gray"
                android:background="@null"/>
            <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_centerVertical="true"
                android:background="@drawable/sms_text"
                android:gravity="center"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/green"
                android:textSize="14sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_1dp"
            android:background="@color/divider"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="请设置密码    :"/>
            <EditText
                android:id="@+id/pwd"
                android:background="@null"
                android:hint="请输入6-20位密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColorHint="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/a_1dp"
            android:layout_marginLeft="5dp"
            android:background="@color/divider"/>
        <Button
            android:id="@+id/login"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/def_red"
            android:textColor="@color/white"
            android:text="确定"/>
    </LinearLayout>

</RelativeLayout>
