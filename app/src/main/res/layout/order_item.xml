<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"

              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View
            android:background="@color/black_overlay"
            android:layout_width="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp"
           />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@mipmap/ty"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>
        <View
            android:background="@color/black_overlay"
            android:layout_width="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            />
    </LinearLayout>

<RelativeLayout
    android:background="@drawable/bg"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_toRightOf="@+id/layout">
    <TextView
        android:id="@+id/txt_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017........"
        />
    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@mipmap/ic_normal_dot_left"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/watch"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pic"
        android:layout_marginRight="5dp"
        android:text="查看详情"
        />
    <View
        android:id="@+id/divider"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/txt_time"
        android:layout_width="match_parent"
        android:background="@color/divider"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/pic_zfb"
        android:layout_below="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/dw"/>
    <TextView
        android:id="@+id/money"
        android:layout_toRightOf="@+id/pic_zfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/red"
        android:text="100"/>
    <TextView
        android:id="@+id/order"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pic_zfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="wwwwwwwww"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_zfb"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:text="成功"
            android:textColor="@color/green"/>
        <ImageView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ty"
            android:layout_toLeftOf="@+id/success"/>
    </RelativeLayout>
</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>