<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
    <com.sunfusheng.glideimageview.GlideImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/my_icon"/>
    <TextView
        android:id="@+id/shop_name"
        android:layout_toRightOf="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/line_color"
        android:textStyle="bold"
        android:text="商品名称"/>
<TextView
    android:visibility="gone"
    android:layout_marginTop="3dp"
    android:id="@+id/evaluate_time"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/pic"
    android:layout_below="@+id/shop_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#676767"
    android:text="2017-10-23"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_comment_star_1"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="10px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_comment_star_red" />
        <ImageView
            android:id="@+id/iv_comment_star_2"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="10px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_comment_star_red" />
        <ImageView
            android:id="@+id/iv_comment_star_3"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="10px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_comment_star_red" />
        <ImageView
            android:id="@+id/iv_comment_star_4"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="10px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_comment_star_red" />
        <ImageView
            android:id="@+id/iv_comment_star_5"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginRight="10px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_comment_star_red" />
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/wujiaoxing"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/content"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/line_color"
        android:layout_below="@+id/pic"
        android:textSize="12sp"
        android:text="我是这里的内容"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/content"
        android:id="@+id/recyclerview"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/specification"
        android:layout_below="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="12sp"
        android:text="金色 ：64G"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout"
        android:paddingLeft="8dp"
        android:layout_below="@+id/specification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家回复："
            android:textColor="#de443a"/>
        <TextView
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#414141"
            android:text="谢谢夸奖，欢迎光临"
            />
    </LinearLayout>


</RelativeLayout>