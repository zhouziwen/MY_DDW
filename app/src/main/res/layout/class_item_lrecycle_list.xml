<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<com.sunfusheng.glideimageview.GlideImageView
    android:id="@+id/glide_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/umeng_socialize_qq"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/phone_name"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iphone 8 64G金色 移动联通电信手机移动联通电信手机"
            android:textColor="@color/line_color"/>
        <TextView
            android:id="@+id/phone_detail"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="64G 内存|1200像素"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phone_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000元"
                android:padding="3dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@mipmap/dw"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/phone_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分期购"
                android:textColor="@color/red"
                android:padding="3dp"
                android:background="@drawable/def_red_tint"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/evaluate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345人评价"/>
            <TextView
                android:id="@+id/consult_num"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345人咨询"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>