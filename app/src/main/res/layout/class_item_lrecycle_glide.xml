<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/glide_icon"
            android:layout_width="87dp"
            android:layout_height="92dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            />
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shopping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#080808"
                android:singleLine="true"
                android:maxEms="10"
                android:text="我我懂得"/>
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_name"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_home_bottom_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="￥29.80"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/goods_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分期购"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/def_red"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/layout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33评价"/>
                <TextView
                    android:id="@+id/consult"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22咨询"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>