<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/my_order"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/line_color"
            android:textStyle="bold"
            android:text="我的订单"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="查看更多订单"
            android:textSize="12sp"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/ic_normal_dot_left"
            />
    </RelativeLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:textColor="@color/search_tab_nomarl"
                android:gravity="center"
                android:drawableTop="@mipmap/dfk"/>
            <TextView
                android:id="@+id/num_1"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/dfk"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/dfh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/dfh"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/search_tab_nomarl"
            android:text="待发货"/>
            <TextView
                android:textSize="10sp"
                android:id="@+id/num_2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/dfh"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <TextView
            android:id="@+id/dsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待收货"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:textColor="@color/search_tab_nomarl"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/dsh"/>
            <TextView
               android:gravity="center"
               android:textColor="@color/white"
                android:id="@+id/num_3"
               android:textSize="10sp"
               android:layout_width="wrap_content"
               android:layout_height="15dp"
                android:layout_toRightOf="@+id/dsh"
               />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/dpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待评价"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/search_tab_nomarl"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/dpj"/>
            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/num_4"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/dpj"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>